{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "collectCoverageFrom": ["../src/**/*.(t|j)s", "!../src/**/*.spec.ts", "!../src/**/*.e2e-spec.ts"],
  "coverageDirectory": "../coverage-e2e",
  "coverageReporters": ["text", "lcov", "html"]
}
